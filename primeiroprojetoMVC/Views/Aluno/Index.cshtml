@{
}
@model List<Aluno>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Matrícula</th>
            <th scope="col">Nome</th>
            <th scope="col">Cpf</th>
            <th scope="col">Data de nascimento</th>
            <th scope="col">Endereço</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (Aluno aluno in Model)
            {
                <tr>
                    <td>@aluno.Matricula </td>
                    <td>@aluno.Nome </td>
                    <td>@aluno.Cpf </td>
                    <td>@aluno.DataDeNascimento </td>
                    <td>@aluno.Endereco </td>

                </tr>
            }
        }
    
    </tbody>
</table>

<div class="text-center">
    <a class="btn btn-primary" type="button" asp-controller="Aluno" asp-action="AdicionarAluno" > Adicionar Aluno</a>
</div>
